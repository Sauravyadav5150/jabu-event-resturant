<?xml version="1.0" encoding="utf-8"?>
<odoo>

     <record id="event_activities_form" model="ir.ui.view">
         <field name="name">event.activities.wizard</field>
         <field name="model">event.activities</field>
         <field name="arch" type="xml">
            <form string="event activities">
                <group>
                    <field name="team_building"/>
                    <field name="cruise"/>
                </group>
            </form>
         </field>
     </record>

      <record id="event_activities_wizard" model="ir.actions.act_window">
        <field name="name">event activities</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">event.activities</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="event_activities_form"/>
        <field name="target">new</field>
    </record>

</odoo>