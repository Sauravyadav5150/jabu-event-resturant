<?xml version="1.0" encoding="utf-8"?>
<odoo>

     <record id="dmc_requirements_form" model="ir.ui.view">
         <field name="name">dmc.requiremets.wizard</field>
         <field name="model">dmc.requirements</field>
         <field name="arch" type="xml">
            <form string="dmc requirements">
                <group>
                    <field name="airport_rep"/>     
                    <field name="ground_transportation"/>
                    <field name="accommodation"/>
                    <field name="venue_sourcing"/>
                    <field name="excursion"/>
                </group>
            </form>
         </field>
     </record>

      <record id="dmc_requirements_wizard" model="ir.actions.act_window">
        <field name="name">dmc.requirements</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">dmc.requirements</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="dmc_requirements_form"/>
        <field name="target">new</field>
    </record>

</odoo>
