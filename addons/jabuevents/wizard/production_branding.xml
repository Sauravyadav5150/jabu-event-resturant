<?xml version="1.0" encoding="utf-8"?>
<odoo>

     <record id="prouction_banding_form" model="ir.ui.view">
         <field name="name">production.branding.wizard</field>
         <field name="model">production.branding</field>
         <field name="arch" type="xml">
            <form string="Production Branding">
                <group>
                    <field name="standees"/>
                    <field name="registration_branding"/>
                    <field name="backdrops"/>
                    <field name="photowall"/>
                    <field name="photobooth"/>
                    <field name="stage_branding"/>
                    <field name="printing"/>
                    <field name="stage_rental"/>
                    <field name="carpet"/>
                    <field name="stairs"/>
                    <field name="decor"/>
                </group>
            </form>
         </field>
     </record>

      <record id="production_branding_wizard" model="ir.actions.act_window">
        <field name="name">Production Brading</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">production.branding</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="production_branding_form"/>
        <field name="target">new</field>
    </record>

</odoo>
